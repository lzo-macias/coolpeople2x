.candidate-profile {
  min-height: 100vh;
  width: 100%;
  max-width: 440px;
  margin: 0 auto;
  background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 50%, #1e1e1e 100%);
  font-family: 'Inter', sans-serif;
}

/* Header */
.profile-header {
  padding: 36px 12px 0;
  position: relative;
}

.favorite-star {
  position: absolute;
  top: 7px;
  right: 9px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  opacity: 0.7;
}

.favorite-star svg {
  width: 18px;
  height: 18px;
}

.profile-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.profile-left {
  margin-top: 1vh;
  display: flex;
  flex-direction: column;
  gap: 8px;
  justify-content: center;  /* horizontal */
  align-items: center; 
}

.profile-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8px;
  flex: 1;
  padding-right: 2vw;
}

.profile-avatar-ring {
  width: 85px;
  height: 85px;
  border-radius: 50%;
  border: 1px solid #FF2A55;
  box-sizing: border-box;
  flex-shrink: 0;
  overflow: hidden;
}

.profile-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.profile-stats {
  display: flex;
  gap: 50px;
  padding-top: 6px;
  padding-right: 30px;
  padding-bottom: 15px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0;
}

.stat-number {
  font-size: 22px;
  font-weight: 400;
  line-height: 26px;
  color: #FFFFFF;
}

.stat-label {
  font-size: 15px;
  font-weight: 400;
  line-height: 18px;
  color: #E6EAEF;
}

.stat-action {
  font-size: 11px;
  font-weight: 400;
  line-height: 13px;
  color: #FFFFFF;
  opacity: 0.8;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  margin-top: 3px;
}

.stat-action:hover {
  opacity: 1;
}

.profile-info {
  display: flex;
  flex-direction: column;
  gap: 0;
}

/* Sparkline Row */
.profile-sparkline-row {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-left: 2vw;
}

.profile-username {
  font-size: 15px;
  font-weight: 400;
  line-height: 18px;
  color: #FFFFFF;
  margin: 0;
}

.profile-party {
  font-size: 13px;
  font-weight: 400;
  line-height: 16px;
}

.profile-change {
  min-width: 48px;
  height: 26px;
  background: #42FF87;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  font-weight: 400;
  line-height: 12px;
  color: #000000;
  padding: 0 4px;
  flex-shrink: 0;
}

/* Tabs */
.profile-tabs {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 10px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.profile-tab {
  background: none;
  border: none;
  font-size: 15px;
  font-weight: 400;
  line-height: 18px;
  color: #777777;
  cursor: pointer;
  padding: 0;
  position: relative;
}

.profile-tab.active {
  color: #FFFFFF;
}

.profile-tab.active::after {
  content: '';
  position: absolute;
  bottom: -5px;
  left: 0;
  width: 140%;
  height: 2px;
  background: #777777;
}

/* Content */
.profile-content {
  padding: 14px 12px 80px;
}

/* Search */
.profile-search {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  width: 120px;
  height: 25px;
  background: linear-gradient(90deg, #000000 0%, #666666 100%);
  border-radius: 10px;
  padding: 0 7px;
  margin-bottom: 18px;
}

.profile-search svg {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

.profile-search svg path,
.profile-search svg circle,
.profile-search svg line {
  stroke: #888888;
}

.search-input {
  flex: 1;
  background: none;
  border: none;
  font-size: 13px;
  font-weight: 400;
  line-height: 16px;
  color: #888888;
  outline: none;
}

.search-input::placeholder {
  color: #888888;
}

/* Large Chart in content */
.profile-chart {
  position: relative;
  margin-bottom: 24px;
  height: 70px;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}

.chart-change {
  position: absolute;
  right: 8px;
  top: 50%;
  transform: translateY(-50%);
  min-width: 48px;
  height: 26px;
  background: #42FF87;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 10px;
  font-weight: 400;
  line-height: 12px;
  color: #000000;
  padding: 0 4px;
}

/* Tag Pills */
.tag-pills {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 8px 10px;
  margin-bottom: 18px;
}

.tag-pill {
  height: 25px;
  border-radius: 10px;
  border: none;
  font-size: 13px;
  font-weight: 400;
  line-height: 16px;
  color: #888888;
  cursor: pointer;
  background: linear-gradient(90deg, #000000 0%, #666666 100%);
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag-pill.active {
  background: #00F2EA;
  color: #222222;
}

/* CP Divider Section */
.cp-divider-section {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 12px 0;
}

.nomination-divider {
  position: absolute;
  left: 0;
  right: 0;
  height: 0;
  border: none;
  border-top: 1px solid;
  border-image: linear-gradient(90deg, #FF2A55, #00F2EA) 1;
}

.cp-badge {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #222222;
  padding: 0 8px;
}

.cp-badge-circle {
  width: 20px;
  height: 20px;
  background: #333333;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 8px;
  line-height: 10px;
  font-weight: 600;
}

.cp-badge-c {
  color: #FF2A55;
}

.cp-badge-p {
  color: #00F2EA;
}

/* Nominations List */
.nominations-list {
  display: flex;
  flex-direction: column;
}

.nomination-item {
  padding: 12px 0;
}

.nomination-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 6px;
}

.nomination-user {
  display: flex;
  align-items: center;
  gap: 12px;
}

.nomination-avatar-ring {
  width: 22px;
  height: 22px;
  border-radius: 50%;
  border: 1px solid #CB30E0;
  box-sizing: border-box;
  flex-shrink: 0;
  overflow: hidden;
}

.nomination-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  object-fit: cover;
}

.nomination-username {
  font-size: 13px;
  font-weight: 400;
  line-height: 16px;
  color: #FFFFFF;
  opacity: 0.8;
}

.nomination-time {
  font-size: 10px;
  font-weight: 400;
  line-height: 12px;
  color: #FFFFFF;
  opacity: 0.8;
}

.nomination-text {
  font-size: 15px;
  font-weight: 400;
  line-height: 20px;
  color: #FFFFFF;
  margin: 0 0 6px 0;
}

.nomination-media {
  position: relative;
  border-radius: 0;
  overflow: hidden;
  margin-bottom: 6px;
  height: 62px;
}

.nomination-media img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.nomination-rating {
  display: flex;
  justify-content: flex-end;
  gap: 5px;
}

.nomination-rating.overlay {
  position: absolute;
  bottom: 6px;
  right: 6px;
}

.stars-container {
  display: flex;
  gap: 5px;
}

.stars-container svg {
  width: 15px;
  height: 15px;
}

/* Load More Buttons */
.load-more-buttons {
  display: flex;
  justify-content: center;
  gap: 12px;
  padding: 18px 0;
}

.load-more-btn {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-btn svg {
  width: 20px;
  height: 20px;
  color: #777777;
}

.load-more-btn:hover svg {
  color: #FFFFFF;
}

/* Message icon in header */
.message-icon {
  position: absolute;
  top: 7px;
  right: 39px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
}

.message-icon svg {
  width: 18px;
  height: 18px;
  color: #777777;
}
